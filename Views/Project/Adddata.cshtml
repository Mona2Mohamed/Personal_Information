@model Project5.Models.Personal_Information
@{
    Layout = "~/Views/Project/_LayoutPage1.cshtml";
}

@using (Html.BeginForm("ViewData", "Project", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section>
        <div class="container">
            <div class="row form-group">
                <div class="col">
                    <div class="inputbox">
                        <input type="text" name="First_Name">
                        <span class="text">First Name</span>
                        <span class="line"></span>
                        @Html.ValidationMessageFor(model => model.First_Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col">
                    <div class="inputbox">
                        <input type="text" name="Last_Name_">
                        <span class="text">Last Name</span>
                        <span class="line"></span>
                        @Html.ValidationMessageFor(model => model.Last_Name_, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col">
                    <div class="inputbox">
                        <input type="text" name="National_Id_">
                        <span class="text">National Id</span>
                        <span class="line"></span>
                        @Html.ValidationMessageFor(model => model.National_Id_, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col">
                    <div class="inputbox">
                        <input type="text" name="Phone_Number_">
                        <span class="text">Phone Number</span>
                        <span class="line"></span>
                        @Html.ValidationMessageFor(model => model.Phone_Number_, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
          
            <div class="row">
                <div class="col">
                    <div class="inputbox">
                        <input type="text" name="Email">
                        <span class="text">Email</span>
                        <span class="line"></span>
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col">
                    <div class="inputbox form-group">
                        <div class="box">
                            <div class="form-group">
                                <input type="file" id="file" name="file" class="inputfile inputfile-2" data-multiple-caption="{count} files selected" multiple />
                                <label for="file"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z" /></svg> <span>National ID image&hellip;</span></label>
                                @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row row1 form-group">
                <div class="col">
                    <input type="submit" value="Submit">
                </div>
            </div>
</div>
</section>
            }

